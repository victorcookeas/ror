<% if user_signed_in? %>
  <div id="friends">
    <table class="table table-striped table-hover">
      <thead >
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <tr>
              <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %> </td>
              <td><%= friend.email %> </td>
              <td><%= friend.phone %> </td>
              <td><%= friend.twitter %> </td>
              <td><%= button_to 'Delete', friend, method: :delete, class: "btn btn-outline-danger btn-sm" %> </td>
              <td></td>
            </tr>
          <% end %>
        <% end %>
      <tbody>
    </table>


  </div>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Hello World!</h1>
  <h2>This is my first Rails Webpage</h2>
<% end %>
